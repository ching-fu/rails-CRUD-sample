<h1>Attendees index.html.erb of event.name=<%= @event.name%></h1>
<table>
<% @attendees.each do |a|%>
	<%= render( :partial => "create", :locals => { :a => a }  ) %>

<% end %>
</table>


<%= form_tag event_attendees_path(@event), :remote=>true do %>
	<%= text_field_tag "newname"%>
	<%= submit_tag "create by AJAX"%>
<% end %>
<%= link_to 'create attendee', new_event_attendee_path(@event), :class => "btn btn-primary"%>

<%= link_to 'back to event list', events_path , :class => "btn btn-primary"%>